<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
              http://www.springframework.org/schema/jdbc
              http://www.springframework.org/schema/jdbc/spring-jdbc-3.1.xsd">

    <bean id="dataSource" destroy-method="close" class="org.apache.tomcat.jdbc.pool.DataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://us-cdbr-east-02.cleardb.com/heroku_ad2dc3ec837c1ef?reconnect=true"/>
        <property name="testOnBorrow" value="true"/>
        <property name="validationQuery" value="select 1"/>
        <property name="validationInterval" value="30000"/>
        <property name="maxActive" value="10" />
        <property name="maxIdle" value="5" />
        <property name="minIdle" value="3" />
        <property name="maxWait" value="-1" />
        <property name="defaultReadOnly" value="true" />
        <property name="removeAbandoned" value="true" />
        <property name="removeAbandonedTimeout" value="5" />
        <property name="username" value="b0466e3031e273"/>
        <property name="password" value="237bc8cd"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>com.amigood.dot.domain.Location</value>
                <value>com.amigood.dot.domain.ParkingSign</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <value>
                hibernate.format_sql = true
                hibernate.show_sql = false
                hibernate.dialect = org.hibernate.dialect.MySQL5InnoDBDialect
		hibernate.connection.release_mode = after_statement
            </value>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

</beans>
